rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to the 'feeds' collection
    match /feeds/{feedId} {
      allow read, write: if true;
    }

    // Allow public read/write access to the 'feedItems' collection
    match /feedItems/{itemId} {
      allow read, write: if true;
    }

    // Allow public read/write access to the 'sources' collection
    match /sources/{sourceId} {
      allow read, write: if true;
    }

    // Allow users to read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // WARNING: The following rules are insecure and should only be used for local development.
    // They allow public read/write access to the 'logs' collection.
    match /logs/{logId} {
      allow read, write: if true;
    }
  }
}